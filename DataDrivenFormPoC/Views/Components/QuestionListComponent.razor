<div hidden="@IsHidden">
    @foreach (var (question, i) in Questions.Select((question, index) => (question, ++index)))
    {
        if (!IsChildForm)
        {
            <QuestionContainerComponent ShowNumberAsLetter=false
                                        QuestionNumber=@(BaseIndex + i)
                                        Question=question
                                        Responses=ResponsesMap[question.Id]
                                        ValidationMessages=ValidationMessagesMap[question.Id]
                                        ResponsesMap=ResponsesMap
                                        ValidationMessagesMap=ValidationMessagesMap
                                        RefreshQuestionList=RefreshQuestionList />
        }
        else
        {
            <QuestionContainerComponent ShowNumberAsLetter=true
                                        QuestionNumber=i
                                        Question=question
                                        Responses=ResponsesMap[question.Id]
                                        ValidationMessages=ValidationMessagesMap[question.Id]
                                        ResponsesMap=ResponsesMap
                                        ValidationMessagesMap=ValidationMessagesMap
                                        RefreshQuestionList=RefreshQuestionList />
        }
    }
</div>