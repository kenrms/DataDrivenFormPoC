@using DataDrivenFormPoC.Views.Components.ContainerComponents;

<ContainerComponent State=State>
    <Content>
        <EditForm Model=FormResponse OnValidSubmit=HandleValidSubmit>
            <ObjectGraphDataAnnotationsValidator />
            <DataAnnotationsValidator />
            <ValidationSummary />

            @foreach (var (question, index) in Form.Questions.Select((question, i) => (question, ++i)))
            {
                <QuestionComponent QuestionNumber=index
                                   Question=@question
                                   Responses=@QuestionOptionResponsesMap[question.Id] />

                <br />
                <br />
            }

            <br />
            <input type="submit" value="Submit" />
        </EditForm>
    </Content>
</ContainerComponent>